{
  "manifest-version": 1,

  "name": "databox-driver-fitbithr",
  "version": "0.3.1",

  "description": "Databox driver to gather heart rate data from the Fitbit API.",
  "author": "Aidan O'Connell <psyao1@nottingham.ac.uk> ()",
  "license": "MIT",

	"databox-type":"driver",

  "tags": [
    "store",
    "blob",
    "db",
    "native",
    "json",
    "timeseries"
],

  "homepage": "https://github.com/psyaoc/databox-driver-fitbithr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psyaoc/databox-driver-fitbithr.git"
  },

  "network-permissions": [
  ],

  "external-whitelist": [
        {
          "urls": [
              "https://api.fitbit.com/"
          ],
          "description": "Used to access the Fitbit API"
        }
      ],

  "hardware-permissions": [
  ],

  "resource-requirements": {
    "store":"core-store"
  }
}
